@model WebApplicationUsers.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<h2>Регистрация нового пользователя</h2>
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-controller="Register" asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Surname"></label><br />
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name"></label><br />
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patronymic"></label><br />
                <input asp-for="Patronymic" class="form-control" />
                <span asp-validation-for="Patronymic"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfBirth"></label><br />
                <input asp-for="DateOfBirth" class="form-control" />
                <span asp-validation-for="DateOfBirth"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label><br />
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label><br />
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordConfirm"></label><br />
                <input asp-for="PasswordConfirm" class="form-control" />
                <span asp-validation-for="PasswordConfirm"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Регистрация" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>