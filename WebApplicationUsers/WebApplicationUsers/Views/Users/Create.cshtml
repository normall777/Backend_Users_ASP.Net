@model WebApplicationUsers.ViewModels.CreateViewModel
@{
    ViewData["Title"] = "Регистрация нового пользователя";
}

<h2>Зарегистрировать нового пользователя</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Users" asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Surname"></label><br />
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name"></label><br />
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patronymic"></label><br />
                <input asp-for="Patronymic" class="form-control" />
                <span asp-validation-for="Patronymic"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfBirth"></label><br />
                <input asp-for="DateOfBirth" class="form-control" />
                <span asp-validation-for="DateOfBirth"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label><br />
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email"></span>
            </div>
            <p></p>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-default" />
            </div>

        </form>
    </div>
</div>